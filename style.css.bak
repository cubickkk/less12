@import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');
* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}
.box {
	
	height: 100vh;
	background-image: url('./images/front_sky.png'),
	url('./images/middle_sky.png'),
	url('./images/back_sky.png'),
	url('./images/under_back_sky.png'),
	url('./images/front_grass.png'),
	url('./images/middle_grass.png'),
	url('./images/back_grass.png'),
	linear-gradient(180deg, rgba(255,196,0,1) 31%, rgba(254,255,0,0.773546918767507) 57%,
	rgba(255,205,0,0.577468487394958) 80%, rgba(250,222,109,0.4430147058823529) 97%);
	
	
	background-size: 100%;
	background-repeat: no-repeat;
	background-position: top, top, top, top, bottom, bottom, bottom;
}
.container {
	
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
 
}
.text {
	font-family: "Permanent Marker", cursive;
	height:120px;
	font-size: 125px;
	color: red;
	text-shadow:5px 5px 5px #333 ;
}


